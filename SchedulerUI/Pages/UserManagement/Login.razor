@page "/login"

@inject ILoginViewModel vm

<style>
    .card{
        justify-content:center;
        width: auto;
        margin: 5% 30%;
    }

    .mat-h2{
        text-align:center;
        margin-top: 10%;
    }

    .mat-h5{
        text-align: center;
        margin-bottom: 5%
    }
    
</style>


<MatH2 Class="mat-h2">Log In</MatH2>

@if (vm.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        <p>@vm.ErrorMessage</p>
    </div>
}
<div class="card">
    <div class="card-body">

        <MatH5 Class="mat-h5">Please log in using your account information</MatH5>

        <EditForm Model="vm.UserLogin" OnValidSubmit="vm.Login">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <ValidationMessage For="@(() => vm.UserLogin.Name)" />
            <MatTextField Outlined="true" @bind-Value="vm.UserLogin.Name" Label="Username" ValidationDisabled="true" FullWidth="true"></MatTextField>

            <ValidationMessage For="@(() => vm.UserLogin.Password)" />
            <MatTextField Outlined="true" @bind-Value="vm.UserLogin.Password" Label="Password" ValidationDisabled="true" FullWidth="true" Type="password"></MatTextField>

            <div style="text-align:center;">
                <MatButton Type="Primary" Disabled="vm.IsRunning" Outlined="true">Login</MatButton>
            </div>
            
        </EditForm>
    </div>
</div>