@page "/register"

@using Syncfusion.Blazor.Inputs

@using SchedulerUI.ViewModels.Interfaces
@inject ILoginViewModel vm

<h1>Register</h1>

@if (vm.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @vm.ErrorMessage
    </div>
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Please enter your details</h5>
        <EditForm Model="vm.User" OnValidSubmit="vm.Register">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                @*<label for="email">Username</label>*@
                @*<InputText Id="email" class="form-control" @bind-Value="user.Name" />*@
                <SfTextBox Placeholder="Username" FloatLabelType="@FloatLabelType.Auto" Id="username" @bind-Value="vm.User.Name"></SfTextBox>
                <ValidationMessage For="@(() => vm.User.Name)" />
            </div>
            <div class="form-group">
                @*<label for="email">Email address</label>
                    <InputText Id="email" class="form-control" @bind-Value="user.Email" />*@
                <SfTextBox Placeholder="Email" FloatLabelType="@FloatLabelType.Auto" Id="email" @bind-Value="vm.User.Email" Type="InputType.Email"></SfTextBox>
                <ValidationMessage For="@(() => vm.User.Email)" />
            </div>
            <div class="form-group">
                @*<label for="password">Password</label>
                    <InputText Id="password" type="password" class="form-control" @bind-Value="vm.User.Password" />*@
                <SfTextBox Placeholder="Password" FloatLabelType="@FloatLabelType.Auto" Id="password" @bind-Value="vm.User.Password" Type="@InputType.Password"></SfTextBox>
                <ValidationMessage For="@(() => vm.User.Password)" />
            </div>
            <div class="form-group">
                @*<label for="confirmPassword">Confirm Password</label>
                    <InputText Id="confirmPassword" type="password" class="form-control" @bind-Value="confirmPassword" />*@
                <SfTextBox Placeholder="Confirm password" FloatLabelType="@FloatLabelType.Auto" Id="confirmPassword" @bind-Value="@vm.ConfirmPassword" Type="InputType.Password"></SfTextBox>
                <ValidationMessage For="@(() => vm.ConfirmPassword)" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </EditForm>
    </div>
</div>
