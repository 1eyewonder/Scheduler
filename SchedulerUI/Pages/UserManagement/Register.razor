@page "/register"

@inject ILoginViewModel vm

    <style>
        .card {
            justify-content: center;
            width: auto;
            margin: 5% 30%;
            border:none;
        }

        .mat-h2 {
            text-align:center;
            margin-top: 10%;
        }

        .mat-h5 {
            text-align: center;
            margin-bottom: 5%
        }
        .mat-button{
            width:20%;
            margin: 2% 40%;
        }

        .mdc-text-field {
            width: 100%;
        }

        .row {
            margin: 10px 0;
        }
    </style>

<MatH2 Class="mat-h2">Register</MatH2>

@if (vm.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @vm.ErrorMessage
    </div>
}

<div class="card">
    <div class="card-body">
        <MatH5 Class="card-title">Please enter your details</MatH5>
        <EditForm Model="vm.User" OnValidSubmit="vm.Register">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row">
                <ValidationMessage For="@(() => vm.User.Name)" />
            </div>
            <div class="row">
                <MatTextField Outlined="true" @bind-Value="vm.User.Name" Label="Username" ValidationDisabled="true"></MatTextField>
            </div>

            <div class="row">
                <ValidationMessage For="@(() => vm.User.Email)" />
            </div>
            <div class="row">
                <MatTextField Outlined="true" @bind-Value="vm.User.Email" Label="Email" ValidationDisabled="true"></MatTextField>
            </div>

            <div class="row">
                <ValidationMessage For="@(() => vm.User.Password)" />
            </div>
            <div class="row">
                <MatTextField Outlined="true" @bind-Value="vm.User.Password" Label="Password" ValidationDisabled="true" Type="password"></MatTextField>
            </div>

            <div class="row">
                <ValidationMessage For="@(() => vm.ConfirmPassword)" />
            </div>
            <div class="row">
                <MatTextField Outlined="true" @bind-Value="vm.ConfirmPassword" Label="Confirm Password" ValidationDisabled="true" Type="password"></MatTextField>
            </div>           

            <div style="text-align:center;">
                <MatButton Type="submit" Disabled="vm.IsRunning" Outlined="true">Submit</MatButton>
            </div>
            
        </EditForm>
    </div>
</div>
