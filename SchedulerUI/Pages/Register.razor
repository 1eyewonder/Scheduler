@page "/register"

@using SchedulerAPI.Dtos
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.Buttons

@inject IUserService userService
@inject NavigationManager NavigationManager

<h1>Register</h1>

@if (ShowErrors)
{
    <div class="alert alert-danger" role="alert">
        @Errors
    </div>
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Please enter your details</h5>
        <EditForm Model="user" OnValidSubmit="HandleRegistration">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                @*<label for="email">Username</label>*@
                @*<InputText Id="email" class="form-control" @bind-Value="user.Name" />*@
                <SfTextBox Placeholder="Username" FloatLabelType="@FloatLabelType.Auto" Id="username" @bind-Value="user.Name"></SfTextBox>
                <ValidationMessage For="@(() => user.Name)" />
            </div>
            <div class="form-group">
                @*<label for="email">Email address</label>
        <InputText Id="email" class="form-control" @bind-Value="user.Email" />*@
                <SfTextBox Placeholder="Email" FloatLabelType="@FloatLabelType.Auto" Id="email" @bind-Value="user.Email" Type="InputType.Email"></SfTextBox>
                <ValidationMessage For="@(() => user.Email)" />
            </div>
            <div class="form-group">
                @*<label for="password">Password</label>
        <InputText Id="password" type="password" class="form-control" @bind-Value="user.Password" />*@
                <SfTextBox Placeholder="Password" FloatLabelType="@FloatLabelType.Auto" Id="password" @bind-Value="user.Password" Type="@InputType.Password"></SfTextBox>
                <ValidationMessage For="@(() => user.Password)" />
            </div>
            <div class="form-group">
                @*<label for="confirmPassword">Confirm Password</label>
        <InputText Id="confirmPassword" type="password" class="form-control" @bind-Value="confirmPassword" />*@
                <SfTextBox Placeholder="Confirm password" FloatLabelType="@FloatLabelType.Auto" Id="confirmPassword" @bind-Value="@confirmPassword" Type="InputType.Password"></SfTextBox>
                <ValidationMessage For="@(() => confirmPassword)" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </EditForm>
    </div>
</div>

@code {

    private UserDto user = new UserDto();
    private bool ShowErrors;
    private string Errors;
    private string confirmPassword;

    private async Task HandleRegistration()
    {
        ShowErrors = false;

        if (confirmPassword == user.Password)
        {
            var result = await userService.Register(user);

            if (result.IsSuccessStatusCode)
            {
                NavigationManager.NavigateTo("/login");
            }
            else
            {
                Errors = result.StatusCode.ToString();
                ShowErrors = true;
            }
        }
        else
        {
            Errors = "Passwords do not match. Please, try again.";
            ShowErrors = true;
        }
    }
}